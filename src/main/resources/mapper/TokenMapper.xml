<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.petshop.mapper.TokenMapper">

    <resultMap id="tokenResult" type="ru.petshop.domain.Token">
        <id property="token" column="token"/>
        <result property="createdAt" column="created_at" />
    </resultMap>

    <select id="selectCurrent" resultMap="tokenResult">
        SELECT
            *
        FROM
            token
        WHERE
            company_id = #{companyId}
        ORDER BY
            created_at DESC
        LIMIT 1
    </select>

    <insert id="addCurrent" parameterType="ru.petshop.domain.Token">
        INSERT INTO token (
            company_id,
            created_at,
            token
        ) VALUES (
            #{companyId},
            #{createdAt},
            #{token}
        )
    </insert>

</mapper>
